<!-- card_shadow.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#D9D9D9" />
    <corners android:radius="8dp" /> <!-- Đặt bán kính góc theo thiết kế của bạn -->
    <stroke
        android:width="1dp"
        android:color="@color/cardview_dark_background" />
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
    <corners android:radius="20dp" /> <!-- Đặt lại bán kính góc cho hiệu ứng bóng -->
    <inset>
        <shape>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <solid android:color="@color/cardview_dark_background" /> <!-- Màu của bóng -->
            <corners android:radius="30dp" /> <!-- Đặt bán kính góc cho bóng -->
        </shape>
    </inset>
</shape>
