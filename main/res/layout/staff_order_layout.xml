<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.StaffOrderActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <vn.edu.tdc.xifood.views.CancelHeader
        android:id="@+id/cancelHeader"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <TextView
        android:text="Chọn bàn"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/tables"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="70dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderedProducts"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBank"
            android:background="@drawable/bank_logo"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageButton
            android:id="@+id/btnMomo"
            android:background="@drawable/momo_logo"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>


    <TextView
        android:text="Tổng cộng"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/total"
        android:text="120000VND"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#F44336"
        android:layout_marginBottom="10dp"
        android:paddingVertical="5dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancelOrder"
            android:text="Huỷ"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAcceptOrder"
            android:text="Tạo đơn"
            android:layout_width="0dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>