<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageButton
                android:id="@+id/backToMain"
                android:layout_width="@dimen/witdhDefaultICon"
                android:layout_height="@dimen/witdhDefaultICon"
                android:background="@drawable/btn_close"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text="@string/nameSettingActivity"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize25"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageButton
                android:id="@+id/editBtn"
                android:layout_width="@dimen/witdhDefaultICon"
                android:layout_height="@dimen/heightCustomIcon20"
                android:background="@drawable/edit_account"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/imageAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_radius"
                        android:src="@drawable/account_icon" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Name: "
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nameUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="start"
                        android:text="name"
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Gender: "
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/genderUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:entries="@array/genderUser"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelDayBornUser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="BirthDay: "
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:text="@string/inputDayBorn" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelEmailUser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/email"
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/emailUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold"
                        android:text="email@gmail.com"/>
                    <Button
                        android:id="@+id/btnChangeEmail"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_button_login"
                        android:text="@string/changePhoneNumber"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelPhoneNumberUser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/phone"
                        android:textSize="@dimen/textSize20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phoneNumberUser"
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:paddingStart="8dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:text="0123456789"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnChangePhoneNumber"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_button_login"
                        android:text="@string/changePhoneNumber"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custom_button_login"
                    android:text="Đổi mật khẩu" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>