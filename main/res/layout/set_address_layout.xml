<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ListSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_close"
            android:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/keyword"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="4"
            android:background="@drawable/search_header"
            android:hint="@string/search"
            android:paddingLeft="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:paddingHorizontal="20dp"
            android:paddingVertical="3dp"
            android:text="ĐỊA CHỈ TÌM THẤY"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <ListView
            android:id="@+id/listAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingBottom="50dp"
            android:background="@drawable/cancel_header_bg"
            android:tooltipText="Chưa có địa chỉ được hiển thị" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:paddingHorizontal="20dp"
            android:paddingVertical="3dp"
            android:text="ĐỊA CHỈ ĐÃ LƯU"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <ListView
            android:id="@+id/userAddressList"
            android:layout_width="match_parent"
            android:tooltipText="Chưa có địa chỉ được hiển thị"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingBottom="50dp"
            android:background="@drawable/cancel_header_bg" />

    </LinearLayout>
</LinearLayout>