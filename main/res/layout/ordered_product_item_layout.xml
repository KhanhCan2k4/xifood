<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingHorizontal="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="0dp"
        android:background="@drawable/order_item_bg"
        android:src="@drawable/ic_launcher_background"
        android:layout_weight="6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btnDecreaseAmount"
            android:src="@drawable/decrease_amount_icon"
            android:layout_width="wrap_content"
            android:backgroundTint="#00000000"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAmount"
            android:text="@string/countDefaultProduct"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btnIncreaseAmount"
            android:src="@drawable/increase_amount_icon"
            android:layout_gravity="center"
            android:backgroundTint="#00000000"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/productName"
        android:text="@string/nameProductDefault"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>